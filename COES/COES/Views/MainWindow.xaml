<Window x:Class="COES.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        DataContext="{Binding Main, Source={StaticResource Locator}}" 
        ResizeMode="NoResize" HorizontalContentAlignment="Stretch">

    <Grid>
        <Button Content="Add Order" 
                HorizontalAlignment="Left" 
                Margin="282.567,207.328,0,0" 
                VerticalAlignment="Top" 
                Width="204.851" 
                Height="23"
                Command="{Binding TestCommand}"/>
        <ListBox HorizontalAlignment="Left" 
                 Height="288.06" 
                 Margin="511.925,87.433,0,0" 
                 VerticalAlignment="Top" 
                 Width="220.896"
                 ItemsSource="{Binding RestaurantManager.Customers}"/>
    </Grid>
</Window>
